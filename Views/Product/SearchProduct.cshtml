@model List<Product>

	<h2>Search Products</h2>

	<form method="get" asp-controller="Product" asp-action="SearchProduct">
		<input type="text" name="query" class="form-control-w-50 d-inline" placeholder="Enter Product name" />
		<button type="submit" class="btn btn-primary">Search</button>
	</form>

	@if (Model != null && Model.Any()){
		<table class="table mt-3">
			<thead>
				<tr>
					<th>Name</th>
					<th>Description</th>
					<th>Price</th>
					<th>Category</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var product in Model){
					<tr>
						<td>@product.Name</td>
						<td>@product.Description</td>
						<td>@product.Price</td>
						<td>@product.Category</td>
					</tr>
				}
			</tbody>

		</table>
	}

	else {
		<p class="mt-3 text-muted">No Products found</p>
	}



